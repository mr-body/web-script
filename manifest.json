{
  "manifest_version": 3,
  "name": "Text Extractor",
  "version": "1.0",
  "description": "A Chrome extension to extract text from a web page element.",
  "permissions": [ "tabs" , "background", "activeTab", "scripting", "windows"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
